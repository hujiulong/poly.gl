{
  "name": "poly.gl",
  "version": "0.0.1",
  "description": "A WebGL library.",
  "license": "MIT",
  "author": "Jiulong Hu <me@hujiulong.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/hujiulong/poly.gl"
  },
  "keywords": [
    "webgl",
    "3d"
  ],
  "main": "dist/poly.js",
  "module": "dist/poly.esm.js",
  "scripts": {
    "build:prod": "rollup -c ./rollup.config.js --environment BUILD:production",
    "build:dev": "rollup -c ./rollup.config.js --environment BUILD:dev",
    "build:watch": "npm run build:dev -- --watch",
    "build": "npm run build:prod",
    "lint": "eslint --fix src debug test",
    "bench": "node test/bench/node.js",
    "bench-browser": "webpack-dev-server --config test/webpack.config.js  --env.bench --progress --hot --open",
    "test": "npm run test-node && npm run build && npm run test-dist &&  npm run collect-metrics && npm run test-browser-puppet",
    "test-ci": "npm run lint && npm run build && npm run test-node && npm run test-dist &&  npm run collect-metrics",
    "test-cover": "NODE_ENV=test tape -r babel-register test/node.js && nyc report",
    "test-fast": "node test/node.js",
    "test-node": "node test/node.js",
    "test-dist": "npm run build-es6 && node test/start.js test-dist",
    "test-browser": "webpack-dev-server --config test/webpack.config.js --progress --hot --open --env.testBrowser ",
    "test-browser-puppet": "node test/start.js test-browser"
  },
  "dependencies": {},
  "devDependencies": {
    "@hujiulong/eslint-config": "^0.0.5",
    "babel-core": "^6.26.0",
    "babel-plugin-external-helpers": "^6.22.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-minify": "^0.3.0",
    "eslint": "^4.19.0",
    "gl": "^4.0.4",
    "module-alias": "^2.0.6",
    "reify": "^0.15.1",
    "rollup": "^0.57.1",
    "rollup-plugin-babel": "^3.0.3",
    "rollup-plugin-commonjs": "^9.1.0",
    "rollup-plugin-node-resolve": "^3.3.0",
    "rollup-plugin-shader": "^0.0.3",
    "rollup-plugin-uglify": "^3.0.0",
    "tape": "^4.9.0",
    "tape-catch": "^1.0.6"
  }
}
